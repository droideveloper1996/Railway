<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".LiveTrainStatusActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints="Select Station" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="4dp"
                android:text="Train No."
                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="4dp"
                android:text="Train Name"
                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="4dp"
                android:text="Schedule Arrival"
                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="4dp"
                android:text="Schedule Departure"

                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="4dp"
                android:text="Actual Arrival"
                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="4dp"
                android:text="Actual Departure"

                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="4dp"
                android:text="Delay"
                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="4dp"
                android:text="Last Location"
                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="4dp"
                android:text="Has Arrived"
                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="9"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="4dp"
                android:text="Has Departed"
                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trainNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:padding="4dp"
                android:textColor="#262728" />

            <TextView
                android:id="@+id/trainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:padding="4dp"
                android:textColor="#262728" />

            <TextView
                android:id="@+id/scheduleArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:padding="4dp"

                android:textColor="#262728" />

            <TextView
                android:id="@+id/scheduleDeparture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:padding="4dp"
                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/actualArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:padding="4dp"
                android:textColor="#262728" />

            <TextView
                android:id="@+id/actualDeparture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:padding="4dp"
                android:textColor="#262728"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/delay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="6"
                android:padding="4dp"
                android:textColor="#262728" />

            <TextView
                android:id="@+id/lastLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="7"
                android:padding="4dp"
                android:textColor="#262728" />

            <TextView
                android:id="@+id/hasArrived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="8"
                android:padding="4dp"
                android:textColor="#262728" />

            <TextView
                android:id="@+id/hasDeparted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="9"
                android:padding="4dp"
                android:textColor="#262728" />

        </GridLayout>


    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</android.support.v7.widget.CardView>





