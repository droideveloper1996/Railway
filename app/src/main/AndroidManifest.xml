<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.railway_services.indian.railway">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/indian_rail"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/indian_rail"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RailwayActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".SigninActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".PnrActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".LiveTrainStatusActivity" />
        <activity android:name=".SeatAvailActivity" />
        <activity android:name=".CancelledTrainActivity" />
        <activity android:name=".RescheduledTrainActivity" />
        <activity android:name=".TrainArrivalActivity"></activity>
    </application>

</manifest>